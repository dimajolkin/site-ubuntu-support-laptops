<div class="col-md-4 text-center col-sm-6 col-xs-6">
    <div class="thumbnail product-box">
        {% set image = hardware.images.first %}
        <img width="160" height="160" src="{{ image ? image.link : 'assets/img/dummyimg.png' }}" alt=""/>
        <div class="caption">
            <h3><a href="#">{{ hardware.name }}</a></h3>
            <p>Vendor : <strong>{{ hardware.vendor.name }}</strong></p>
            <p>Category : <strong>{{ hardware.category.name }}</strong></p>
            <p><a href="#">Ptional dismiss button </a></p>
            <p>Ptional dismiss button in tional dismiss button in </p>
            <p>
                {% set engine = searchEngine.yandex %}
                <a href="{{ engine.link(hardware) }}" class="btn btn-success" role="button" target="_blank">
                    {{ engine.title }}
                </a>
                <a href="#" class="btn btn-primary" role="button">See Details</a>
            </p>
        </div>
    </div>
</div>